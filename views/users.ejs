<% let navHTML1 = "Home", navHTML2 = "Groups", navHref1 = "./", navHref2 = "./groups" %>
<% include inc/header%>

<div class="container">
    <% if(userID){%>
        User ID = <%= userID %>
        <form method="POST" action="/logout" id="logoutForm">
            <input type="hidden" value="<%= userID %>" name="userID">
            <button type="submit">Log out</button>
        </form> 

        <form method="POST" action="/deleteuser" id="deleteuserForm" style="display: none">
            <button type="submit" class="warning">DELETE USER</button>
        </form> 
    <% }else{ %>

    <!-- <h2 class="warning">WARNING, Not secure! Data not incrypted</h2> -->

    <div id="loginForm" class="userForm">
        <h1>Log in</h1>
        <form action="./login" method="POST">
            <input type="text" name="username" placeholder="Username" >
            <input type="password" name="password" placeholder="Password" ><br>
            <button type="submit">Log in</button>
            <button type="button" id="btnNoAcc">No account?</button>
        </form>
    </div>

    <div id="registerForm" class="userForm" style="display: none;">
        <h1>Register</h1>
        <form action="./register" method="POST">
            <input type="text" name="username" placeholder="Username" >
            <input type="password" name="password" placeholder="Password, NOT SECURE" <!--  required-->
            <input type="text" name="color" placeholder="Color, eks: a0f"><br>
            <button type="submit">Register</button>
            <button type="button" id="btnBackToLogin">Back to login</button>
        </form>
    </div>
    <!-- <button id="btnRegister">No account?</button> -->

    <br>

    <% } %>
</div>

<script> 
    let deleteuserForm = document.getElementById("deleteuserForm");
    let button = document.createElement("button");
    button.onclick = () => {
        deleteuserForm.style.display = "block";
        button.style.display = "none";
    }
    button.innerHTML = "DELETE USER";
    button.classList.add("warning");
    deleteuserForm.parentElement.appendChild(button);
</script>


<% include inc/footer%>